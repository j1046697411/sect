{
  "$schema": "https://opencode.ai/config.json",
  "model": "anthropic/claude-sonnet-4-5",
  "small_model": "anthropic/claude-haiku-4-5",
  "default_agent": "build",
  "instructions": [
    "CONTRIBUTING.md",
    "instructions/INSTRUCTIONS.md",
    "skills/tdd-workflow/SKILL.md",
    "skills/security-review/SKILL.md",
    "skills/coding-standards/SKILL.md"
  ],
  "plugin": [
    "./plugins"
  ],
  "agent": {
    "build": {
      "description": "主要编码代理，用于开发工作",
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-5",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "read": true
      }
    },
    "planner": {
      "description": "实现规划专家，用于复杂功能和重构。适用于实现规划、架构变更或复杂重构。",
      "mode": "subagent",
      "prompt": "{file:./prompts/agents/planner.md}",
      "tools": {
        "read": true,
        "bash": true,
        "write": false,
        "edit": false
      }
    },
    "architect": {
      "description": "软件架构专家，负责系统设计、可扩展性和技术决策。",
      "mode": "subagent",
      "prompt": "{file:./prompts/agents/architect.md}",
      "tools": {
        "read": true,
        "bash": true,
        "write": false,
        "edit": false
      }
    },
    "code-reviewer": {
      "description": "代码审查专家。审查代码的质量、安全性和可维护性。编写或修改代码后立即使用。",
      "mode": "subagent",
      "prompt": "{file:./prompts/agents/code-reviewer.md}",
      "tools": {
        "read": true,
        "bash": true,
        "write": false,
        "edit": false
      }
    },
    "security-reviewer": {
      "description": "安全漏洞检测和修复专家。处理用户输入、认证、API端点或敏感数据的代码后使用。",
      "mode": "subagent",
      "prompt": "{file:./prompts/agents/security-reviewer.md}",
      "tools": {
        "read": true,
        "bash": true,
        "write": true,
        "edit": true
      }
    },
    "tdd-guide": {
      "description": "测试驱动开发专家，强制执行先写测试的方法论。编写新功能、修复错误或重构代码时使用。确保 80%+ 测试覆盖率。",
      "mode": "subagent",
      "prompt": "{file:./prompts/agents/tdd-guide.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true
      }
    },
    "build-error-resolver": {
      "description": "构建和 TypeScript 错误解决专家。构建失败或类型错误时使用。仅以最小化差异修复构建/类型错误。",
      "mode": "subagent",
      "prompt": "{file:./prompts/agents/build-error-resolver.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true
      }
    },
    "e2e-runner": {
      "description": "端到端测试专家，使用 Playwright。为关键用户流程生成、维护和运行 E2E 测试。",
      "mode": "subagent",
      "prompt": "{file:./prompts/agents/e2e-runner.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true
      }
    },
    "doc-updater": {
      "description": "文档和代码地图专家。用于更新代码地图和文档。",
      "mode": "subagent",
      "prompt": "{file:./prompts/agents/doc-updater.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true
      }
    },
    "refactor-cleaner": {
      "description": "死代码清理和整合专家。用于移除未使用的代码、重复代码和重构。",
      "mode": "subagent",
      "prompt": "{file:./prompts/agents/refactor-cleaner.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true
      }
    },
    "go-reviewer": {
      "description": "Go 代码审查专家，专注于惯用 Go 模式、并发模式、错误处理和性能。",
      "mode": "subagent",
      "prompt": "{file:./prompts/agents/go-reviewer.md}",
      "tools": {
        "read": true,
        "bash": true,
        "write": false,
        "edit": false
      }
    },
    "go-build-resolver": {
      "description": "Go 构建、vet 和编译错误解决专家。以最小化更改修复 Go 构建错误。",
      "mode": "subagent",
      "prompt": "{file:./prompts/agents/go-build-resolver.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true
      }
    },
    "database-reviewer": {
      "description": "PostgreSQL 数据库专家，负责查询优化、模式设计、安全性和性能。整合 Supabase 最佳实践。",
      "mode": "subagent",
      "prompt": "{file:./prompts/agents/database-reviewer.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true
      }
    }
  },
  "command": {
    "plan": {
      "description": "为复杂功能创建详细的实现计划",
      "template": "{file:./commands/plan.md}\n\n$ARGUMENTS",
      "agent": "planner",
      "subtask": true
    },
    "tdd": {
      "description": "强制执行 TDD 工作流，确保 80%+ 测试覆盖率",
      "template": "{file:./commands/tdd.md}\n\n$ARGUMENTS",
      "agent": "tdd-guide",
      "subtask": true
    },
    "code-review": {
      "description": "审查代码的质量、安全性和可维护性",
      "template": "{file:./commands/code-review.md}\n\n$ARGUMENTS",
      "agent": "code-reviewer",
      "subtask": true
    },
    "security": {
      "description": "运行全面的安全审查",
      "template": "{file:./commands/security.md}\n\n$ARGUMENTS",
      "agent": "security-reviewer",
      "subtask": true
    },
    "build-fix": {
      "description": "以最小化更改修复构建和 TypeScript 错误",
      "template": "{file:./commands/build-fix.md}\n\n$ARGUMENTS",
      "agent": "build-error-resolver",
      "subtask": true
    },
    "e2e": {
      "description": "使用 Playwright 生成并运行端到端测试",
      "template": "{file:./commands/e2e.md}\n\n$ARGUMENTS",
      "agent": "e2e-runner",
      "subtask": true
    },
    "refactor-clean": {
      "description": "移除死代码并整合重复代码",
      "template": "{file:./commands/refactor-clean.md}\n\n$ARGUMENTS",
      "agent": "refactor-cleaner",
      "subtask": true
    },
    "orchestrate": {
      "description": "编排多个代理处理复杂任务",
      "template": "{file:./commands/orchestrate.md}\n\n$ARGUMENTS",
      "agent": "planner",
      "subtask": true
    },
    "learn": {
      "description": "从会话中提取模式和经验",
      "template": "{file:./commands/learn.md}\n\n$ARGUMENTS"
    },
    "checkpoint": {
      "description": "保存验证状态和进度",
      "template": "{file:./commands/checkpoint.md}\n\n$ARGUMENTS"
    },
    "verify": {
      "description": "运行验证循环",
      "template": "{file:./commands/verify.md}\n\n$ARGUMENTS"
    },
    "eval": {
      "description": "根据标准运行评估",
      "template": "{file:./commands/eval.md}\n\n$ARGUMENTS"
    },
    "update-docs": {
      "description": "更新文档",
      "template": "{file:./commands/update-docs.md}\n\n$ARGUMENTS",
      "agent": "doc-updater",
      "subtask": true
    },
    "update-codemaps": {
      "description": "更新代码地图",
      "template": "{file:./commands/update-codemaps.md}\n\n$ARGUMENTS",
      "agent": "doc-updater",
      "subtask": true
    },
    "test-coverage": {
      "description": "分析测试覆盖率",
      "template": "{file:./commands/test-coverage.md}\n\n$ARGUMENTS",
      "agent": "tdd-guide",
      "subtask": true
    },
    "setup-pm": {
      "description": "配置包管理器",
      "template": "{file:./commands/setup-pm.md}\n\n$ARGUMENTS"
    },
    "go-review": {
      "description": "Go 代码审查",
      "template": "{file:./commands/go-review.md}\n\n$ARGUMENTS",
      "agent": "go-reviewer",
      "subtask": true
    },
    "go-test": {
      "description": "Go TDD 工作流",
      "template": "{file:./commands/go-test.md}\n\n$ARGUMENTS",
      "agent": "tdd-guide",
      "subtask": true
    },
    "go-build": {
      "description": "修复 Go 构建错误",
      "template": "{file:./commands/go-build.md}\n\n$ARGUMENTS",
      "agent": "go-build-resolver",
      "subtask": true
    },
    "skill-create": {
      "description": "从 git 历史生成技能",
      "template": "{file:./commands/skill-create.md}\n\n$ARGUMENTS"
    },
    "instinct-status": {
      "description": "查看已学习的本能",
      "template": "{file:./commands/instinct-status.md}\n\n$ARGUMENTS"
    },
    "instinct-import": {
      "description": "导入本能",
      "template": "{file:./commands/instinct-import.md}\n\n$ARGUMENTS"
    },
    "instinct-export": {
      "description": "导出本能",
      "template": "{file:./commands/instinct-export.md}\n\n$ARGUMENTS"
    },
    "evolve": {
      "description": "将本能聚类为技能",
      "template": "{file:./commands/evolve.md}\n\n$ARGUMENTS"
    }
  },
  "permission": {
    "mcp_*": "ask"
  }
}
